<launch>

    <let name="urdf_path" value="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher" >
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <!-- <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"  output="screen"/> -->

    <include
        file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r $(find-pkg-share my_robot_bringup)/world/warehouse_world.sdf" />
    </include>

    <node pkg="ros_gz_sim"
        exec="create"
        output="screen"
        args="-topic robot_description" />

    <let name="gazebo_config_path" value="$(find-pkg-share my_robot_bringup)/config/gazebo_bridge.yaml"/>

    <node pkg="ros_gz_bridge" exec="parameter_bridge" >
        <param name="config_file" value="$(var gazebo_config_path)" />
    </node>

    <node pkg="rviz2"
      exec="rviz2"
      output="screen"
      args="-d $(find-pkg-share my_robot_description)/rviz/urdf_config2.rviz" />

</launch>